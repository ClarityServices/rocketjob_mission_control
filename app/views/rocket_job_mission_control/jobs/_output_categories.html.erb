<div class='lead'>Output Categories:</div>
<% @job.output_categories.each do |category| %>
  <div class='row'>
    <div class='col-md-12'>
      <div class='lead'><label><%= category.name.to_s.camelcase %>:</label></div>
      <div class='row'>
        <div class='col-md-12'>
          <table>
            <% if category.serializer %>
              <tr>
                <td><label>Serializer:</label></td>
                <td><%= category.serializer %></td>
              </tr>
            <% end %>
            <tr>
              <td><label>Collect nil output:</label></td>
              <td><%= category.nils %></td>
            </tr>
            <% if category.file_name %>
              <tr>
                <td><label>File Name:</label></td>
                <td><%= category.file_name %></td>
              </tr>
            <% end %>
            <% if category.format %>
              <tr>
                <td><label>Format:</label></td>
                <td><%= category.format %></td>
              </tr>
              <% if category.format_options %>
                <tr>
                  <td><label>Format Options:</label></td>
                  <td><%= category.format_options.ai(html:true, plain: true, ruby19_syntax: true, sort_keys: true) %></td>
                </tr>
              <% end %>
            <% end %>
            <% if category.columns %>
              <tr>
                <td><label>Columns:</label></td>
                <td><%= category.columns.ai(html: true, plain: true) %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
  <br/>
<% end %>
